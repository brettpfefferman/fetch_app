<h1>New Dog</h1>

  <%= form_for @new_dog do |f| %>
    <% if @dog.errors.any? %>
      <div class="error_messages">
        <h2>Form is invalid</h2>
        <ul>
          <% for message in @dog.errors.full_messages %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :age %>
      <%= f.text_field :age %>
    </div>
    </div>
    <div class="field">
        <%= f.label :breed %>
        <%= f.text_field :breed %>
    </div>
    <div class="field">
        <%= f.label :size %>
        <%= f.select :size, [['Small'],['Medium'],['Large']] %>
    </div>
    <div class="field">
      <%= f.label :image %>
      <%= f.file_field :image %>
    </div>
    <div class="field">
      <%= f.label :bio %>
      <%= f.text_field :bio %>
    </div>
    <div class="actions"><%= f.submit %></div>
  <% end %>